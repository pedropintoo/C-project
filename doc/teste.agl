view : View with {
    Ox = 0;
    Oy = 0;
    width = 401;
    height = 401;
    title = "Illustrating a moving pacman";
    background = "alice blue";
}

line : Line at (90,90) with {
    length = (90,90);
    fill = "red";
}

refresh view;

for i in 1..5 do {
    move line by (45,45); 
    refresh view after 1 s;
}

