view : View with {
    Ox = 0;
    Oy = 0;
    width = 401;
    height = 401;
    title = "Illustrating a moving pacman";
    background = "alice blue";
}

polygon : Polygon at (0, 0) with {
    points = [(0, 0), (100, 0), (100, 100), (0, 100), (25, 75)];
    fill = "black";
}


refresh view;

for i in 1..5 do {
    move polygon by (45,45); 
    refresh view after 1 s;
}

