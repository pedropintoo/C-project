view : View with {
    Ox = 0;
    Oy = 0;
    width = 401;
    height = 401;
    title = "Illustrating a moving pacman";
    background = "alice blue";
}

poly : Blob at (0,0) with {
    points = [(0, 0), (100, 0), (100, 100), (0, 100), (20, 75)];
    color = "black";
    width = 2;
}

refresh view;

for i in 1..10 do {
    refresh view after 25 ms;
    move poly by (20,100); 
    refresh view after 25 ms;
    move poly to (0, 0);
}

