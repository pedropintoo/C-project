view : View with {
    Ox = 0;
    Oy = 0;
    width = 401;
    height = 401;
    title = "Illustrating a moving pacman";
    background = "alice blue";
}

line : Line at (90,90) with {
    length = (90,90);
    fill = "red";
}

refresh view;

for i in 1..10 do {
    refresh view after 25 ms;
    move line by (90,90); 
    refresh view after 25 ms;
    move line to (90, 90);
}

