view : View with {
    Ox = 0;
    Oy = 0;
    width = 401;
    height = 401;
    title = "Illustrating a moving pacman";
    background = "alice blue";
}

arc : Arc at (0,0) with {
    length = (50,50);
    start = 30;
    extent = 100;
    outline = "tomato";
}

refresh view;

for i in 1..5 do {
    move arc by (45,45); 
    refresh view after 1 s;
}

